@model BookPoint.Models.CartModel

@{
	var userId = Context.Session.GetInt32("UserId") ?? 0;
}
<script>
	const currentUID = @userId;
</script>

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>BooksPoint - Customer</title>
	<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

	<link rel="stylesheet" href="~/css/Cart.css" asp-append-version="true" />
	<script src="~/js/Cart.js" asp-append-version="true"></script>
</head>
<body>
	<!-- Content Wrapper (white background for all page content) -->
	<div class="content-wrapper">

		<!-- Cart Header -->
		<div class="header py-3 shadow-sm bg-light">
			<div class="container-fluid">
				<div class="d-flex align-items-center">
					<a href="javascript:history.back()" class="me-3">
						<i class="fa-solid fa-arrow-left-long w-100"></i>
					</a>
					<h3 class="cart-title mb-0">Your Cart</h3>
				</div>
			</div>
		</div>






		<!-- Main Content -->
		<div class="main-content">
			<div class="books-container scrollable-container">
				<div class="books-grid">
					@foreach (var item in Model.Items)
					{
						var book = item.Book;
						<div class="book-card-unified">
							<div class="book-info-top">
								<div class="book-cover-horizontal">
									<img src="@book.CoverImagePath" alt="Book Cover for @book.BookName" />
								</div>
								<div class="book-details-horizontal">
									<h5 class="book-title">@book.BookName</h5>
									<p class="book-author">by @book.AuthorName</p>
									<p class="book-category">@book.Category?.Name</p>
									<p class="book-price">$@book.SalesPrice.ToString("0.00")</p>

									<button class="btn btn-tertiary view-more-btn"
											data-book-title="@book.BookName"
											data-book-author="@book.AuthorName"
											data-book-category="@book.Category?.Name"
											data-book-price="$@book.SalesPrice"
											data-book-image="@book.CoverImagePath"
											data-book-description="@book.Description"
											data-sample-pdf="@book.SamplePdfPath">
										View More
									</button>
								</div>
							</div>

							<div class="book-actions-bottom">
								<div class="quantity-control">
									<span class="qty-label">Quantity :-</span>
									<div class="qty-box">
										<button class="qty-btn-minus">-</button>
										<input type="number" value="@item.Quantity" readonly class="qty-input" data-book-id="@item.BookId" />
										<button class="qty-btn-plus">+</button>

									</div>
								</div>
								<button class="btn btn-danger remove-from-cart" data-item-id="@item.CartItemId">
									Remove from Cart
								</button>
							</div>
						</div>
					}
				</div>


			</div>


		</div>


	</div>
	<!-- Cart Remove Success Overlay -->
	<div id="cartRemoveOverlay" class="confirmation-overlay" style="display: none;">
		<div class="confirmation-card">
			<!-- Header -->
			<div class="card-header bg-danger text-white">
				<h5 class="mb-0">
					<i class="fas fa-trash-alt"></i>
					Removed
				</h5>
			</div>

			<!-- Body -->
			<div class="card-body text-center">
				<p class="mb-3 fw-bold text-dark">
					Book removed from cart successfully!
				</p>
			</div>

			<!-- Footer -->
			<div class="card-footer text-end">
				<button type="button" class="btn btn-danger" id="closeRemoveOverlay">
					OK
				</button>
			</div>
		</div>
	</div>
	<!-- REMOVE CONFIRMATION OVERLAY -->
	<div id="removeConfirmOverlay" class="confirmation-overlay" style="display: none;">
		<div id="removeCard" class="removeConfirmCard">
			<!-- Header -->
			<div class="card-header bg-danger text-white">
				<h5 class="mb-0">
					<i class="fas fa-exclamation-triangle me-2"></i>
					Confirm Remove
				</h5>
			</div>

			<!-- Body -->
			<div class="card-body">
				<p class="mb-3">Are you sure you want to <strong>remove this book</strong> from your cart?</p>
				<p class="text-muted small mb-0">This action cannot be undone.</p>
			</div>

			<!-- Footer -->
			<div class="card-footer text-end">
				<button type="button" class="btn btn-secondary me-2" id="cancelRemove">Cancel</button>
				<button type="button" class="btn btn-danger" id="confirmRemove">Remove</button>
			</div>
		</div>
	</div>






	<!-- Book Details Modal -->
	<div class="modal fade" id="bookDetailsModal" tabindex="-1" aria-hidden="true">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title"><i class="fas fa-book-open me-2"></i>Book Details</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
				</div>
				<div class="modal-body">
					<div class="row">
						<div class="col-md-4 text-center">
							<img id="modalBookImage" src="" alt="Book Cover" class="book-detail-cover mb-3">
						</div>
						<div class="col-md-8 book-detail-info">
							<h2 id="modalBookTitle" class="book-detail-title"></h2>
							<p id="modalBookAuthor" class="book-detail-author"></p>
							<span id="modalBookCategory" class="book-detail-category"></span>
							<div id="modalBookPrice" class="book-detail-price"></div>

							<div id="samplePdfSection" class="sample-pdf-section" style="display:none;">
								<h6><i class="fas fa-file-pdf me-2"></i>Sample Available</h6>
								<a id="samplePdfLink" href="#" target="_blank" class="sample-pdf-link">
									<i class="fas fa-download"></i> Download Sample PDF
								</a>
							</div>
						</div>
					</div>

					<div class="book-description">
						<h6><i class="fas fa-align-left me-2"></i>Description</h6>
						<p id="modalBookDescription"></p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>

</body>
</html>
