@model BookPoint.Models.BookModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/BooksForm.css" />
<script src="~/js/BooksForm.js"></script>
<div class="page-content">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <a href="javascript:void(0)" id="backToBooks" class="me-3 text-decoration-none text-dark fw-bold">
                <i class="bi bi-arrow-left fs-5"></i>
            </a>
            <h5 class="mb-0" id="formTitle">
                Add New Book
            </h5>

        </div>

        <div class="card-body">
            @if (TempData["BookError"] != null)
            {
                <div class="alert alert-danger" id="error-summary-category" style="padding:0.5rem 1rem; line-height:1.2;">
                    @TempData["BookError"]
                </div>
            }

            <form asp-action="AddOrEditBook" style="margin-top:8px;" class="needs-validation row g-3" method="post" enctype="multipart/form-data" onsubmit="return validateForm()">
                <input type="hidden" asp-for="Id" />


                <div class="row">

                    <div class="col-md-2">
                        <label asp-for="CoverImagePath" class="form-label">Book Cover Image <span class="text-danger">*</span></label>
                        <div class="cover-preview-container" onclick="document.getElementById('coverImage').click()">
                            <button type="button" id="cancelImage" class="btn btn-sm btn-danger" onclick="removeImage(event)" style="display:none;">X</button>
                            <img id="coverPreview" src="" data-image="@(Model?.CoverImagePath ?? "")" alt="Cover Preview" class="img-thumbnail" style="display:none;">
                            <i id="previewPlaceholder" class="bi bi-image" style="font-size: 2rem; color: #6c757d;"></i>
                        </div>
                        <input type="file" name="CoverImageFile" class="d-none" id="coverImage" accept="image/*" onchange="previewCover(this)">
                        <!-- Remove the hidden field as it's causing confusion -->
                        <span id="coverImageValidation" class="text-danger small" style="display:none;">Cover Image is required</span>
                    </div>

                    <div class="col-md-5">
                        <div class="mb-3">
                            <label asp-for="BookName" class="form-label">Book Name <span class="text-danger">*</span></label>
                            <input asp-for="BookName" class="form-control" placeholder="Enter book name" />
                            <span asp-validation-for="BookName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">
                                Category <span class="text-danger">*</span>
                            </label>
                            <select asp-for="CategoryId" class="form-select">
                                <option value="">-- Select Category --</option>
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="mb-3">
                            <label asp-for="AuthorName" class="form-label">Author Name</label>
                            <input asp-for="AuthorName" class="form-control" placeholder="Enter author name" />
                            <span asp-validation-for="AuthorName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label">Quantity <span class="text-danger">*</span></label>
                            <input asp-for="Quantity" class="form-control" placeholder="Enter quantity" />
                            <span asp-validation-for="Quantity" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="col-12 mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter book description"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="PurchasePrice" class="form-label">Purchase Price <span class="text-danger">*</span></label>
                            <input asp-for="PurchasePrice" class="form-control" placeholder="Enter purchase price" />
                            <span asp-validation-for="PurchasePrice" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="SalesPrice" class="form-label">Sales Price <span class="text-danger">*</span></label>
                            <input asp-for="SalesPrice" class="form-control" placeholder="Enter sales price" />
                            <span asp-validation-for="SalesPrice" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="SamplePdfFile" class="form-label">Sample PDF <span class="text-danger">*</span></label>
                            <input type="file" asp-for="SamplePdfFile" class="form-control" accept="application/pdf" />
                            <span asp-validation-for="SamplePdfFile" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="col-12 d-flex justify-content-start mt-3">
                    <button type="submit" class="btn btn-primary">Save Book</button>
                    <button type="reset" class="btn btn-secondary ms-3" onclick="clearForm()">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
